{
  "collections": {
    "pages": {
      "displayName": "Pages",
      "attributes": {
        "slug": {
          "type": "uid",
          "targetField": "title",
          "required": true
        },
        "title": {
          "type": "string",
          "required": true
        },
        "seo": {
          "type": "component",
          "component": "shared.seo"
        },
        "templateId": {
          "type": "string"
        },
        "sections": {
          "type": "dynamiczone",
          "components": [
            "sections.hero_section",
            "sections.split_media",
            "sections.feature_band",
            "sections.cta_band",
            "sections.faq_section",
            "sections.contact_band"
          ]
        }
      }
    },
    "navigation": {
      "displayName": "Navigation",
      "attributes": {
        "name": {
          "type": "string",
          "required": true
        },
        "items": {
          "type": "component",
          "repeatable": true,
          "component": "shared.nav_item"
        }
      }
    },
    "settings": {
      "displayName": "Settings",
      "attributes": {
        "siteName": {
          "type": "string",
          "required": true
        },
        "siteDescription": {
          "type": "text"
        },
        "logo": {
          "type": "media"
        },
        "defaultSeo": {
          "type": "component",
          "component": "shared.seo"
        }
      }
    }
  }
}